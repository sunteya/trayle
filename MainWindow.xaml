<Window x:Class="trayle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trayle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinWidth="600" MinHeight="400">
    <DockPanel Margin="5,5,5,5">
        <DockPanel Height="30" Margin="0,0,0,5" VerticalAlignment="Top" DockPanel.Dock="Top">
            <Button x:Name="actionButton" Content="Button" Width="75" DockPanel.Dock="Right" Margin="10,0,0,0" Click="ActionButton_Click"/>
            <ComboBox x:Name="itemsComboBox" VerticalContentAlignment="Center" />
        </DockPanel>
        <TextBox x:Name="outputTextBox" TextWrapping="Wrap" AcceptsReturn="True" FontFamily="Consolas" IsReadOnly="True" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible" Foreground="White" Background="#FF343A40" />
    </DockPanel>
</Window>
